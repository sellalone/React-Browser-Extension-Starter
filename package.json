{
  "name": "react-browser-extension-starter",
  "version": "1.0.0",
  "author": "Saleh Muhammad <imsalehmuhammad@gmail.com>",
  "description": "A browser extension starter based on React, Redux, Typescript, Styled-Component and more. Runs on Chrome and Firefox.",
  "scripts": {
    "dev": "cross-env NODE_ENV=development webpack -d",
    "prod": "cross-env NODE_ENV=production webpack -p",
    "watch": "cross-env NODE_ENV=watch webpack -d",
    "test": "jest",
    "test:coverage": "jest --collect-coverage",
    "lint": "eslint 'src/**/*.ts?(x)'",
    "lint:fix": "npm run lint --fix",
    "clean": "rm -rf ./build",
    "clean:all": "rm -rf ./build && rm -rf ./coverage && rm -rf ./node_modules"
  },
  "dependencies": {
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-redux": "^7.1.3",
    "redux": "^4.0.5",
    "styled-components": "^5.0.0",
    "webext-redux": "^2.1.6"
  },
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-proposal-object-rest-spread": "^7.9.0",
    "@babel/polyfill": "^7.8.7",
    "@babel/preset-env": "^7.9.0",
    "@babel/preset-react": "^7.9.4",
    "@babel/preset-typescript": "^7.9.0",
    "@types/chrome": "^0.0.92",
    "@types/jest": "^24.9.1",
    "@types/react": "^16.9.31",
    "@types/react-dom": "^16.9.6",
    "@types/react-redux": "^7.1.7",
    "@types/react-test-renderer": "^16.9.2",
    "@types/styled-components": "^4.4.2",
    "@types/webpack": "^4.41.3",
    "@typescript-eslint/eslint-plugin": "^2.26.0",
    "@typescript-eslint/parser": "^2.26.0",
    "awesome-typescript-loader": "^5.2.1",
    "babel-loader": "^8.1.0",
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^5.1.1",
    "cross-env": "^6.0.3",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^3.0.0",
    "html-webpack-plugin": "^5.5.0",
    "jest": "^25.1.0",
    "prettier": "^2.0.2",
    "react-test-renderer": "^16.12.0",
    "ts-jest": "^25.0.0",
    "typesafe-actions": "^5.1.0",
    "typescript": "^3.7.5",
    "webpack": "^4.41.5",
    "webpack-cli": "^3.3.10",
    "webpack-extension-reloader": "^1.1.4"
  }
}
